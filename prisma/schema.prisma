// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bookstore.db"
}

model Author {
  id      Int      @id @default(autoincrement())
  name    String
  created DateTime @default(now())
  updated DateTime @default(now())

  book Book[]
}

model Book {
  id      Int      @id @default(autoincrement())
  bookId  Int
  title   String
  price   Int
  image   String
  created DateTime @default(now())
  updated DateTime @default(now())

  author Author @relation(fields: [bookId], references: [id])

  bookstore Bookstore[]
}

model Bookstore {
  id          Int      @id @default(autoincrement())
  bookstoreId Int
  name        String
  location    String
  created     DateTime @default(now())
  updated     DateTime @default(now())

  book Book @relation(fields: [bookstoreId], references: [id])
}
